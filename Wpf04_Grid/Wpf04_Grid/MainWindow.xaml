<Window x:Class="Wpf04_Grid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf04_Grid"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="0" Click="Button_Click_1">Hi There</Button>
        <Button Grid.Column="2" Click="Button_Click">How are you</Button>
        <Button Grid.Column="1" Grid.Row="1" Click="Button_Click">How are you</Button>
        <Button Grid.Column="2" Click="Button_Click">How are you</Button>
        <Label Name="label" Grid.Column="1" SelectiveScrollingGrid.SelectiveScrollingOrientation="Vertical"></Label>
    </Grid>
</Window>
